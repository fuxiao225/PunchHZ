
.header image{
  width: 100%;
  height: 100%；
}

.content{
  margin: 0 40rpx;
  padding-bottom: 130rpx;
}

.content-top{
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0;
}

.footer{
  width: 100%;
  height: 130rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  border-top: 1rpx solid #ccc;
  text-align: center;
}
.back-home{
  flex: 1;

}
.home-icon{
  width: 100%;
  height: 70rpx;
}
.home-icon image{
  width: 80rpx;
  height: 100%;
}

.collect{
  flex: 1;
}
.collect-icon{
  width: 100%;
  height: 70rpx;
}
.collect-icon image{
  width: 80rpx;
  height: 100%;
}
.share-btn{
  flex: 2;
  padding: 15rpx 10rpx;
}
.btn{
  height: 100rpx;
  background: #ccc;
  border-radius: 50rpx;
  line-height: 90rpx;
  font-size: 40rpx;
}

/* 弹框部分 */
.popup{
    width: 750rpx;
    height: 1500rpx;
    background: #ccc;
    /* opacity: 0.5; */
    position: absolute;
    left: 0;
    top: 0;
}
.popup-box{
    margin: 700rpx auto;
    width: 600rpx;
    height: 400rpx;
    background: #fff;
    border: 1rpx solid #333;
    border-radius: 50rpx;
    padding: 30rpx 40rpx;
}
.box-top{
    border-bottom: 1rpx solid #ccc;
    display: flex;
    height: 80%;
}
.friend{
    flex: 1;
    text-align: center;
    margin-top: 100rpx;
}
.friend image{
    width: 100rpx;
    height: 100rpx;
}
.poster{
    flex: 1;
    text-align: center;
    margin-top: 100rpx;
}
.poster image{
    width: 100rpx;
    height: 100rpx;
}
.box-bottom{
    text-align: center;
    padding-top: 30rpx;
}