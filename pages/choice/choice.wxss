.choice-page {
    width: 100%;
}

.pull-down {
    text-align: center;
    color: #999;
    position: absolute;
    left: 100rpx;
    top: -40rpx;
    /* background: red; */
    z-index: 2;
}

.swiper {
    text-align: center;
}

image {
    width: 100%;
    height: 100%;
}

.page-container {
    height: 100%;
    margin-top: 30rpx;
    display: flex;
    position: relative;
}
.left{
    width: 1rpx;
    margin-left: 30rpx;
    background: #ccc;
    border: 1rpx solid #ccc;
    overflow: hidden;
    padding-bottom: 9999rpx;
    margin-bottom: -9999rpx;
}
.right {
    margin-left: 60rpx;
    flex: 1;
}
.box{
    width: 30rpx;
    height: 30rpx;
    background: #fff;
    border: 1rpx solid #333;
    border-radius: 50%;
    position: absolute;
    left: 16rpx;
}
.active{
    background: #333;
}
.top-month {
    color: #3333;
}

.top-week {
    font-size: 44rpx;
}

.item-card {
    width: 600rpx;
    height: 350rpx;
    border: 1rpx solid #666;
    box-shadow: 10rpx 10rpx 10rpx #ccc;
    border-radius: 50rpx;
    margin: 40rpx 0;
}

